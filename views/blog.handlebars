<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date created_on}}</p>
</div>

<h3>Add a comment</h3>
<form class='form new-comment-form'>
    <div class='form-group'>
        <label for='comment'>comment:</label>
        <textarea class='form input' id='comment' name='comment'></textarea>
    </div>
    <div class='form-group'>
        <button type='submit' class='btn btn-primary btn-create' value="'{{id}}">Create</button>
    </div>
</form>

{{#if comments.length}}
<h3>Comments:</h3>

{{#each comments as |comment|}}
    <p><b>{{format_time comment.created_on}}</b></p>